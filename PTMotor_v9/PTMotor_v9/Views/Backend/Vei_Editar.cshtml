@{
    ViewBag.Title = "Vei_Editar";
    Layout = "~/Views/Shared/_LayoutBackend.cshtml";
}

<html>
<body id="page1">
    <div id="main">
        <div id="content">
            <div class="indent">
                <div class="col-1">
                    <h3><b>Veículo </b> Novo</h3>
                    <p>Todos os campo são obrigatórios.</p>
                    <fieldset>
                        <p>
                            <b>Matrícula </b>
                            <input id="matricula1" type="text" size="2" maxlength="2" /> -
                            <input id="matricula2" type="text" size="2" maxlength="2" /> -
                            <input id="matricula3" type="text" size="2" maxlength="2" />
                            &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp
                            <b> Data de fabrico</b>
                            <input id="data_fabrico" type="date" />
                        </p>
                        <p>
                            <b> Marca</b>
                            <input id="marca" type="text" size=19% />
                            &nbsp
                            <b> Modelo</b>
                            <input id="modelo" type="text" size=18% />
                            &nbsp
                            <b> KM</b>
                            <input id="km" type="text" size=18% maxlength="6" />
                        </p>
                        <p>
                            <b> Preço €</b>
                            <input id="preco" type="text" size=17% />
                            &nbsp &nbsp
                            <b> Tipo</b>
                            <select id="tipo">
                                <option>Cat.A (Motociclo)</option>
                                <option>Cat.B (Ligeiro)</option>
                                <option>Cat.C (Pesado)</option>
                            </select>
                            &nbsp
                            <b> Estado</b>
                            <select id="estado">
                                <option>Disponível</option>
                                <option>Reservado</option>
                                <option>Entregue</option>
                                <option>Abatido</option>
                                <option>Não Disponivei</option>
                            </select>
                        </p>
                        <p>
                            <b> Notas Adiccionais</b><br />
                            <textarea id="notasadiccionais" rows="3" cols="96%"></textarea>
                        </p>
                        <p>
                            <b>OUTRAS NOTIFICAÇÕES</b><br />
                            <b>Imposto Automóvel:</b>
                            <input id="notificacoes1" type="date" />
                            &nbsp &nbsp &nbsp <b> Seguro:</b>
                            <input id="notificacoes2" type="date" />
                        </p>
                        <p>
                            <b>
                                Vistoria:
                                <input id="notificacoes3" type="date" />
                                &nbsp &nbsp &nbsp &nbsp &nbsp&nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp  <b> Revisão:</b>
                                <input id="notificacoes4" type="date" />
                        </p>
                        <b>Histórico: </b>
                        <p>
                            <textarea id="cl_historico" rows="3" cols="96%" readonly="readonly"></textarea>
                        </p>
                    </fieldset>
                    <a href="Vei_principal" class="link1" style="margin-left:35"><em><b>Cancelar</b></em></a>
                    <a href="#" class="link1" style="margin-left:65"><em><b>Eliminar</b></em></a>
                    <a href="#" class="link1" style="margin-left:75"><em><b>Guardar</b></em></a>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
